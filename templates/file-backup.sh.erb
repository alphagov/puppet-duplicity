#!/bin/bash
set -e
set -o pipefail

<% @_environment.each do |var|-%>
export <%= var %>
<% end-%>
<%= @_pre_command %>
duplicity --full-if-older-than <%= @_full_if_older_than -%> --s3-use-new-style <%= @_encryption -%> --include '<%= @directory -%>' --exclude '**' --archive-dir <%= @archive_directory -%> / <%= @_target_url -%>
<%= @_remove_older_than_command %>
